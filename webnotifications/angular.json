{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "cli": {
      "analytics": "c73821cc-c3cd-481c-a275-0657b4a6c943"
    },
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
      "@servoy/webnotifications": {
        "projectType": "library",
        "root": "projects/webnotifications",
        "sourceRoot": "projects/webnotifications/src",
        "prefix": "lib",
        "architect": {
          "build": {
            "builder": "@angular-devkit/build-angular:ng-packagr",
            "options": {
              "tsConfig": "projects/webnotifications/tsconfig.lib.json",
              "project": "projects/webnotifications/ng-package.json"
            },
            "styles": [
                "node_modules/ngx-toastr/toastr.css"
              ],
            "configurations": {
              "production": {
                "tsConfig": "projects/webnotifications/tsconfig.lib.prod.json"
              }
            }
          },
          "test": {
            "builder": "@angular-devkit/build-angular:karma",
            "options": {
              "preserveSymlinks": true,
              "main": "projects/webnotifications/src/test.ts",
              "tsConfig": "projects/webnotifications/tsconfig.spec.json",
              "karmaConfig": "projects/webnotifications/karma.conf.js"
            }
          },
          "lint": {
            "builder": "@angular-eslint/builder:lint",
            "options": {
              "preserveSymlinks": true,
              "lintFilePatterns": [
                "projects/webnotifications/src/**/*.ts",
                "projects/webnotifications/src/**/*.html"
              ]
            }
          }
        }
      }
    },
    "defaultProject": "@servoy/webnotifications"
  }